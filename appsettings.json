{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=Data/phonebook.db"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "JwtSettings": {
    "Secret": "Mine-super-secret-key-with-at-least-256-bits",
    "Issuer": "ContactManagement",
    "Audience": "ContactManagementAPI",
